import java.util.*;

/* -----------------------------------------------------------------------------
Globals
----------------------------------------------------------------------------- */ 
DotSystem dots;

/* -----------------------------------------------------------------------------
setup
----------------------------------------------------------------------------- */ 
void setup() {
  size(1200,800, P2D);
  smooth(8);
  background(235);
  dots = new DotSystem(9);
  dots.setMandelBrot();
}


/* -----------------------------------------------------------------------------
draw
----------------------------------------------------------------------------- */ 
void draw() {
  background(235);
  dots.display();
}

/* -----------------------------------------------------------------------------
save
----------------------------------------------------------------------------- */ 
void mousePressed() {
  save("image.png");
}